{
  "manifest_version": 3,
  "name": "Smart Solver Extension",
  "version": "1.0",
  "description": "Automatically solves coding problems and MCQs using AI",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*",
    "*://*.hackerrank.com/*",
    "*://*.codewars.com/*",
    "*://*.hackerearth.com/*",
    "*://*.codeforces.com/*",
    "*://*.atcoder.jp/*",
    "*://*.spoj.com/*",
    "*://*.geeksforgeeks.org/*",
    "*://*.interviewbit.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.leetcode.com/problems/*"
      ],
      "js": ["editor-bridges.js", "monaco-bridge.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.hackerrank.com/challenges/*",
        "*://*.hackerrank.com/contests/*",
        "*://*.hackerrank.com/domains/*"
      ],
      "js": ["editor-bridges.js", "monaco-bridge.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.codewars.com/kata/*",
        "*://*.codewars.com/kumite/*"
      ],
      "js": ["editor-bridges.js", "monaco-bridge.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.hackerearth.com/problem/*",
        "*://*.hackerearth.com/challenges/*"
      ],
      "js": ["editor-bridges.js", "monaco-bridge.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.codeforces.com/problemset/problem/*"
      ],
      "js": ["editor-bridges.js", "monaco-bridge.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.atcoder.jp/contests/*/tasks/*"
      ],
      "js": ["editor-bridges.js", "monaco-bridge.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.spoj.com/problems/*"
      ],
      "js": ["editor-bridges.js", "monaco-bridge.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.geeksforgeeks.org/problems/*"
      ],
      "js": ["editor-bridges.js", "monaco-bridge.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.interviewbit.com/problems/*"
      ],
      "js": ["editor-bridges.js", "monaco-bridge.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "editor-bridges.js",
        "monaco-bridge.js",
        "utils.js",
        "content.js",
        "hackerrank-direct-access.js"
      ],
      "matches": [
        "*://*.leetcode.com/*",
        "*://*.hackerrank.com/*",
        "*://*.codewars.com/*",
        "*://*.hackerearth.com/*",
        "*://*.codeforces.com/*",
        "*://*.atcoder.jp/*",
        "*://*.spoj.com/*",
        "*://*.geeksforgeeks.org/*",
        "*://*.interviewbit.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 